<% content_for(:auth_header) do %>
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign in</h2>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="mt-2 text-center text-sm text-gray-600">
      Or
      <%= link_to "create your account for FREE", new_registration_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </p>
  <% end %>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-6">
    <%= f.label :email, class: label_class %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class %>
    </div>
  </div>

  <div class="mb-6">
    <%= f.label :password, class: label_class %>
    <div class="mt-1">
      <%= f.password_field :password, autocomplete: "current-password", class: input_class %>
    </div>
  </div>

  <div class="flex items-center justify-between mb-6">
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
      </div>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="text-sm">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.submit "Log in", class: form_button_class %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
